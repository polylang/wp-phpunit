{
	"name": "wpsyntex/wp-phpunit",
	"description": "PHPUnit library for WordPress",
	"license": "GPL-3.0-or-later",
	"homepage": "https://polylang.pro",
	"type": "library",
	"minimum-stability": "dev",
	"config": {
		"sort-packages": true
	},
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/polylang/polylang-cs"
		}
	],
	"require": {
		"php": ">=5.6",
		"brain/monkey": "^2.0",
		"cheprasov/php-cli-args": "^3.0",
		"php-stubs/woocommerce-stubs": "^5.5",
		"phpunit/phpunit": "^5.7",
		"symfony/console": "^4.4",
		"wpsyntex/polylang-phpstan": "dev-master",
		"wpsyntex/polylang-stubs": "dev-master"
	},
	"require-dev": {
		"php": "^7.1 || ^8.0",
		"automattic/phpcs-neutron-standard": "*",
		"automattic/vipwpcs": "*",
		"wpsyntex/polylang-cs": "dev-first-shot"
	},
	"autoload": {
		"psr-4": {
			"WP_Syntex\\Polylang_Phpunit\\": "UnitTests/"
		}
	},
	"scripts": {
		"cs": "vendor/bin/phpcs",
		"stan": "vendor/bin/phpstan analyze --memory-limit=400M",
		"lint": [
			"@cs",
			"@stan"
		],
		"install-tests": "bin/install-wp-suite.sh",
		"install-tests-with-db": "bin/install-wp-suite.sh latest true"
	},
	"scripts-descriptions": {
		"cs": "Runs PHPCS linter.",
		"stan": "Runs PHPStan analysis.",
		"lint": "Runs both PHPCS and PHPStan.",
		"install-tests": "Installs the WordPress tests suite (without installing the database).",
		"install-tests-with-db": "Installs the WordPress tests suite (with database creation)."
	}
}
