{
	"name": "wpsyntex/wp-phpunit",
	"description": "PHPUnit library for WordPress",
	"license": "GPL-3.0-or-later",
	"homepage": "https://polylang.pro",
	"type": "library",
	"config": {
		"sort-packages": true
	},
	"require": {
		"php": ">=5.6",
		"brain/monkey": "^2.0",
		"cheprasov/php-cli-args": "^3.0",
		"dealerdirect/phpcodesniffer-composer-installer": "*",
		"php-stubs/woocommerce-stubs": "^5.5",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"phpunit/phpunit": "^7.5",
		"roave/security-advisories": "dev-master",
		"squizlabs/php_codesniffer": "^3.6",
		"suin/phpcs-psr4-sniff": "^3.0",
		"symfony/console": "^4.4",
		"wp-coding-standards/wpcs": "^2.3",
		"wpsyntex/polylang-phpstan": "dev-master",
		"wpsyntex/polylang-stubs": "dev-master"
	},
	"require-dev": {
		"php": "^7.1 || ^8.0",
		"automattic/phpcs-neutron-standard": "*",
		"automattic/vipwpcs": "*"
	},
	"autoload": {
		"psr-4": {
			"WP_Syntex\\Polylang_Phpunit\\": "UnitTests/"
		},
		"files": [
			"tmp/wordpress-tests-lib/includes/phpunit7/MockObject/Builder/NamespaceMatch.php",
			"tmp/wordpress-tests-lib/includes/phpunit7/MockObject/Builder/ParametersMatch.php",
			"tmp/wordpress-tests-lib/includes/phpunit7/MockObject/InvocationMocker.php",
			"tmp/wordpress-tests-lib/includes/phpunit7/MockObject/MockMethod.php"
		],
		"exclude-from-classmap": [
			"vendor/phpunit/phpunit/src/Framework/MockObject/Builder/NamespaceMatch.php",
			"vendor/phpunit/phpunit/src/Framework/MockObject/Builder/ParametersMatch.php",
			"vendor/phpunit/phpunit/src/Framework/MockObject/InvocationMocker.php",
			"vendor/phpunit/phpunit/src/Framework/MockObject/MockMethod.php"
		]
	},
	"scripts": {
		"cs": "vendor/bin/phpcs",
		"stan": "vendor/bin/phpstan analyze --memory-limit=400M",
		"lint": [
			"@cs",
			"@stan"
		],
		"install-suite": "bin/install-wp-tests.sh wordpress_tests root root 127.0.0.1:3306 latest",
		"install-suite-nodb": "bin/install-wp-tests.sh wordpress_tests root root 127.0.0.1:3306 latest true",
		"fix-suite": "php bin/fix-tests-suite.php",
		"install-tests": [
			"@install-suite",
			"@fix-suite"
		],
		"install-tests-nodb": [
			"@install-suite-nodb",
			"@fix-suite"
		]
	},
	"scripts-descriptions": {
		"cs": "Runs PHPCS linter.",
		"stan": "Runs PHPStan analysis.",
		"lint": "Runs both PHPCS and PHPStan.",
		"install-suite": "Installs the WordPress tests suite.",
		"install-suite-nodb": "Installs the WordPress tests suite without creating the database.",
		"fix-suite": "Fixes some small issues in the WordPress tests suite by performing some text replacements in the suite's files.",
		"install-tests": "Installs and fixes the WordPress tests suite.",
		"install-tests-nodb": "Installs and fixes the WordPress tests suite without creating the database."
	}
}
